    "version": "0.2.0",
    "configurations": [
        {
            "name": "(OSX) Launch",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/kv",
            "args": [],
            "cwd": "${workspaceRoot}",
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'kv'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=kv"
                ],
                "filter": {
                    "name": "kv",
                    "kind": "lib"
                }
            },
            "args": ["get_stored_value"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'kv'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=kv",
                    "--package=kv"
                ],
                "filter": {
                    "name": "kv",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'kv'",
            "cargo": {
                "args": [
                    "test",
                    // "--no-run",
                    "--bin=kv",
                    "--package=kv"
                ],
                "filter": {
                    "name": "kv",
                    "kind": "bin"
                }
            },
            "args": ["get_stored_value"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'tests'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=tests",
                    "--package=kv"
                ],
                "filter": {
                    "name": "tests",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}